<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="zhizhu.cy.platform.system.provider.mapper.FoodSkuMapper">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="zhizhu.cy.platform.system.api.entity.FoodSku" id="foodSkuMap">
        <result property="id" column="id"/>
        <result property="foodId" column="food_id"/>
        <result property="skuId" column="sku_id"/>
        <result property="propsRelation" column="props_relation"/>
        <result property="quantity" column="quantity"/>
        <result property="price" column="price"/>
        <result property="promotionPrice" column="promotion_price"/>
        <result property="flagUse" column="flag_use"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
        <result property="remark" column="remark"/>
        <result property="dataStatus" column="data_status"/>
    </resultMap>

	<select id="queryObject" resultType="zhizhu.cy.platform.system.api.entity.FoodSku">
		select * from st_cy_food_sku where id = #{value}
	</select>

	<select id="queryList" resultType="zhizhu.cy.platform.system.api.entity.FoodSku">
		select * from st_cy_food_sku
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from st_cy_food_sku 
	</select>
	 
	<insert id="save" parameterType="zhizhu.cy.platform.system.api.entity.FoodSku" useGeneratedKeys="true" keyProperty="id">
		insert into st_cy_food_sku
		(
			`food_id`, 
			`sku_id`, 
			`props_relation`, 
			`quantity`, 
			`price`, 
			`promotion_price`, 
			`flag_use`, 
			`create_time`, 
			`update_time`, 
			`remark`, 
			`data_status`
		)
		values
		(
			#{foodId}, 
			#{skuId}, 
			#{propsRelation}, 
			#{quantity}, 
			#{price}, 
			#{promotionPrice}, 
			#{flagUse}, 
			#{createTime}, 
			#{updateTime}, 
			#{remark}, 
			#{dataStatus}
		)
	</insert>
	 
	<update id="update" parameterType="zhizhu.cy.platform.system.api.entity.FoodSku">
		update st_cy_food_sku 
		<set>
			<if test="foodId != null">`food_id` = #{foodId}, </if>
			<if test="skuId != null">`sku_id` = #{skuId}, </if>
			<if test="propsRelation != null">`props_relation` = #{propsRelation}, </if>
			<if test="quantity != null">`quantity` = #{quantity}, </if>
			<if test="price != null">`price` = #{price}, </if>
			<if test="promotionPrice != null">`promotion_price` = #{promotionPrice}, </if>
			<if test="flagUse != null">`flag_use` = #{flagUse}, </if>
			<if test="createTime != null">`create_time` = #{createTime}, </if>
			<if test="updateTime != null">`update_time` = #{updateTime}, </if>
			<if test="remark != null">`remark` = #{remark}, </if>
			<if test="dataStatus != null">`data_status` = #{dataStatus}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from st_cy_food_sku where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from st_cy_food_sku where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>