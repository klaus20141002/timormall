<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.zhangxd.platform.system.provider.mapper.FoodSkuMapper">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="cn.zhangxd.platform.system.api.entity.FoodSku" id="foodSkuMap">
        <result property="id" column="id"/>
        <result property="foodId" column="food_id"/>
        <result property="skuId" column="sku_id"/>
        <result property="propsRelation" column="props_relation"/>
        <result property="quantity" column="quantity"/>
        <result property="price" column="price"/>
        <result property="promotionPrice" column="promotion_price"/>
        <result property="isUse" column="is_use"/>
        <result property="createDate" column="create_date"/>
        <result property="updateDate" column="update_date"/>
        <result property="delFlag" column="del_flag"/>
    </resultMap>

	<select id="queryObject" resultType="cn.zhangxd.platform.system.api.entity.FoodSku">
		select * from st_cy_food_sku where id = #{value}
	</select>

	<select id="queryList" resultType="cn.zhangxd.platform.system.api.entity.FoodSku">
		select * from st_cy_food_sku
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from st_cy_food_sku 
	</select>
	 
	<insert id="save" parameterType="cn.zhangxd.platform.system.api.entity.FoodSku" useGeneratedKeys="true" keyProperty="id">
		insert into st_cy_food_sku
		(
			`food_id`, 
			`sku_id`, 
			`props_relation`, 
			`quantity`, 
			`price`, 
			`promotion_price`, 
			`is_use`, 
			`create_date`, 
			`update_date`, 
			`del_flag`
		)
		values
		(
			#{foodId}, 
			#{skuId}, 
			#{propsRelation}, 
			#{quantity}, 
			#{price}, 
			#{promotionPrice}, 
			#{isUse}, 
			#{createDate}, 
			#{updateDate}, 
			#{delFlag}
		)
	</insert>
	 
	<update id="update" parameterType="cn.zhangxd.platform.system.api.entity.FoodSku">
		update st_cy_food_sku 
		<set>
			<if test="foodId != null">`food_id` = #{foodId}, </if>
			<if test="skuId != null">`sku_id` = #{skuId}, </if>
			<if test="propsRelation != null">`props_relation` = #{propsRelation}, </if>
			<if test="quantity != null">`quantity` = #{quantity}, </if>
			<if test="price != null">`price` = #{price}, </if>
			<if test="promotionPrice != null">`promotion_price` = #{promotionPrice}, </if>
			<if test="isUse != null">`is_use` = #{isUse}, </if>
			<if test="createDate != null">`create_date` = #{createDate}, </if>
			<if test="updateDate != null">`update_date` = #{updateDate}, </if>
			<if test="delFlag != null">`del_flag` = #{delFlag}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from st_cy_food_sku where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from st_cy_food_sku where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>