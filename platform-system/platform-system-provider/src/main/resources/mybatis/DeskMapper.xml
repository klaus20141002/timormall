<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.zhangxd.platform.system.provider.mapper.DeskMapper">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="cn.zhangxd.platform.system.api.entity.Desk" id="deskMap">
        <result property="id" column="id"/>
        <result property="merchantId" column="merchant_id"/>
        <result property="deskNumber" column="desk_number"/>
        <result property="createDate" column="create_date"/>
        <result property="UpdateDate" column="update_date"/>
        <result property="availableNumber" column="available_number"/>
    </resultMap>

	<select id="queryObject" resultType="cn.zhangxd.platform.system.api.entity.Desk">
		select * from st_cy_desk where id = #{value}
	</select>

	<select id="queryList" resultType="cn.zhangxd.platform.system.api.entity.Desk">
		select * from st_cy_desk where del_flag = 0 
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from st_cy_desk 
	</select>
	 
	<insert id="save" parameterType="cn.zhangxd.platform.system.api.entity.Desk" useGeneratedKeys="true" keyProperty="id">
		insert into st_cy_desk
		(
			`merchant_id`, 
			`desk_number`, 
			`create_date`, 
			`update_date`, 
			`available_number`                  
		)
		values
		(
			#{merchantId}, 
			#{deskNumber}, 
			#{createDate}, 
			#{updateDate}, 
			#{availableNumber}
		)
	</insert>
	 
	<update id="update" parameterType="cn.zhangxd.platform.system.api.entity.Desk">
		update st_cy_desk 
		<set>
			<if test="merchantId != null">`merchant_id` = #{merchantId}, </if>
			<if test="deskNumber != null">`desk_number` = #{deskNumber}, </if>
			<if test="createDate != null">`create_date` = #{createDate}, </if>
			<if test="updateDate != null">`update_time` = #{updateDate}, </if>
			<if test="availableNumber != null">`available_number` = #{availableNumber}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		update st_cy_desk set del_flag = 1 where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		update st_cy_desk set del_flag = 1 where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>