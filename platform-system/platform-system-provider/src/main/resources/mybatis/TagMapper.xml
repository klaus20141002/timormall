<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="zhizhu.cy.platform.system.provider.mapper.TagMapper">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="zhizhu.cy.platform.system.api.entity.Tag" id="tagMap">
        <result property="id" column="id"/>
        <result property="tagName" column="tag_name"/>
        <result property="tagIndex" column="tag_index"/>
        <result property="createDate" column="create_date"/>
        <result property="updateTime" column="update_time"/>
        <result property="delFlag" column="del_flag"/>
    </resultMap>

	<select id="queryObject" resultType="zhizhu.cy.platform.system.api.entity.Tag">
		select * from st_cy_tag where id = #{value}
	</select>

	<select id="queryList" resultType="zhizhu.cy.platform.system.api.entity.Tag">
		select * from st_cy_tag
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from st_cy_tag 
	</select>
	 
	<insert id="save" parameterType="zhizhu.cy.platform.system.api.entity.Tag" useGeneratedKeys="true" keyProperty="id">
		insert into st_cy_tag
		(
			`tag_name`, 
			`tag_index`, 
			`create_date`, 
			`update_time`, 
			`del_flag`
		)
		values
		(
			#{tagName}, 
			#{tagIndex}, 
			#{createDate}, 
			#{updateTime}, 
			#{delFlag}
		)
	</insert>
	 
	<update id="update" parameterType="zhizhu.cy.platform.system.api.entity.Tag">
		update st_cy_tag 
		<set>
			<if test="tagName != null">`tag_name` = #{tagName}, </if>
			<if test="tagIndex != null">`tag_index` = #{tagIndex}, </if>
			<if test="createDate != null">`create_date` = #{createDate}, </if>
			<if test="updateTime != null">`update_time` = #{updateTime}, </if>
			<if test="delFlag != null">`del_flag` = #{delFlag}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from st_cy_tag where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from st_cy_tag where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>