<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="zhizhu.cy.platform.system.provider.mapper.OrderFoodsMapper">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="zhizhu.cy.platform.system.api.entity.OrderFoods" id="orderFoodsMap">
        <result property="id" column="id"/>
        <result property="orderId" column="order_id"/>
        <result property="foodsSkuId" column="foods_sku_id"/>
        <result property="foodsId" column="foods_id"/>
        <result property="count" column="count"/>
        <result property="price" column="price"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
        <result property="dataStatus" column="data_status"/>
        <result property="remark" column="remark"/>
    </resultMap>

	<select id="queryObject" resultType="zhizhu.cy.platform.system.api.entity.OrderFoods">
		select * from st_cy_order_foods where id = #{value}
	</select>

	<select id="queryList" resultType="zhizhu.cy.platform.system.api.entity.OrderFoods">
		select * from st_cy_order_foods
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from st_cy_order_foods 
	</select>
	 
	<insert id="save" parameterType="zhizhu.cy.platform.system.api.entity.OrderFoods" useGeneratedKeys="true" keyProperty="id">
		insert into st_cy_order_foods
		(
			`order_id`, 
			`foods_sku_id`, 
			`foods_id`, 
			`count`, 
			`price`, 
			`create_time`, 
			`update_time`, 
			`data_status`, 
			`remark`
		)
		values
		(
			#{orderId}, 
			#{foodsSkuId}, 
			#{foodsId}, 
			#{count}, 
			#{price}, 
			#{createTime}, 
			#{updateTime}, 
			#{dataStatus}, 
			#{remark}
		)
	</insert>
	 
	<update id="update" parameterType="zhizhu.cy.platform.system.api.entity.OrderFoods">
		update st_cy_order_foods 
		<set>
			<if test="orderId != null">`order_id` = #{orderId}, </if>
			<if test="foodsSkuId != null">`foods_sku_id` = #{foodsSkuId}, </if>
			<if test="foodsId != null">`foods_id` = #{foodsId}, </if>
			<if test="count != null">`count` = #{count}, </if>
			<if test="price != null">`price` = #{price}, </if>
			<if test="createTime != null">`create_time` = #{createTime}, </if>
			<if test="updateTime != null">`update_time` = #{updateTime}, </if>
			<if test="dataStatus != null">`data_status` = #{dataStatus}, </if>
			<if test="remark != null">`remark` = #{remark}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from st_cy_order_foods where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from st_cy_order_foods where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>