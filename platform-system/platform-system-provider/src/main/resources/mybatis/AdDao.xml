<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.klauting.timormall.system.provider.mapper.AdMapper">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.klauting.timormall.system.api.entity.Ad" id="adMap">
        <result property="id" column="id"/>
        <result property="adName" column="ad_name"/>
        <result property="adDesc" column="ad_desc"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTiem" column="update_tiem"/>
        <result property="dataStatus" column="data_status"/>
    </resultMap>

	<select id="queryObject" resultType="com.klauting.timormall.system.api.entity.Ad">
		select * from kt_ad where id = #{value}
	</select>

	<select id="queryList" resultType="com.klauting.timormall.system.api.entity.Ad">
		select * from kt_ad
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from kt_ad 
	</select>
	 
	<insert id="save" parameterType="com.klauting.timormall.system.api.entity.Ad" useGeneratedKeys="true" keyProperty="id">
		insert into kt_ad
		(
			`ad_name`, 
			`ad_desc`, 
			`create_time`, 
			`update_tiem`, 
			`data_status`
		)
		values
		(
			#{adName}, 
			#{adDesc}, 
			#{createTime}, 
			#{updateTiem}, 
			#{dataStatus}
		)
	</insert>
	 
	<update id="update" parameterType="com.klauting.timormall.system.api.entity.Ad">
		update kt_ad 
		<set>
			<if test="adName != null">`ad_name` = #{adName}, </if>
			<if test="adDesc != null">`ad_desc` = #{adDesc}, </if>
			<if test="createTime != null">`create_time` = #{createTime}, </if>
			<if test="updateTiem != null">`update_tiem` = #{updateTiem}, </if>
			<if test="dataStatus != null">`data_status` = #{dataStatus}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from kt_ad where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from kt_ad where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>